<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="264.64dp"
    android:background="#ffffff"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="8.36dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/show_all_farm_photo"
        android:layout_width="match_parent"
        android:layout_height="176.64dp"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_all_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제주 행복 감귤 농장 1박 2일"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/show_all_location"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제주 서귀포시"
                android:textColor="#54000000" />

            <TextView
                android:id="@+id/show_all_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="20,000원"
                android:textColor="#000000" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/show_all_farmer_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@color/colorAccent" />

    </RelativeLayout>
</LinearLayout>