<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/my_image"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            android:src="@drawable/mymy_ing1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:lineSpacingExtra="5dp"
            android:text="인원미달로\n아쉽게도 농활이 취소되었습니다\n:-(  "
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/my_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/my_image" />

        <TextView
            android:id="@+id/my_nonghwalname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="제주 행복 감귤 농장"
            android:textColor="#DE000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/my_image" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <TextView
            android:id="@+id/my_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="제주 서귀포시"
            android:textColor="#8A000000"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/my_nonghwalname" />

        <TextView
            android:id="@+id/my_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="20,000"
            android:textColor="#DE000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/my_place" />

        <View
            android:id="@+id/view8"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#F3F3F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_price" />

        <TextView
            android:id="@+id/my_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="2018.6.29"
            android:textColor="#DE000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline63"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <TextView
            android:id="@+id/my_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="2018.6.30  "
            android:textColor="#DE000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/my_startdate"
            app:layout_constraintEnd_toStartOf="@+id/guideline43"
            app:layout_constraintStart_toStartOf="@+id/guideline63"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <View
            android:id="@+id/view9"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#F3F3F5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_startdate" />

        <TextView
            android:id="@+id/textView82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="원"
            android:textColor="#DE000000"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/my_price"
            app:layout_constraintStart_toEndOf="@+id/my_price" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/mymy_ic_arrow"
            app:layout_constraintBottom_toTopOf="@+id/view9"
            app:layout_constraintEnd_toStartOf="@+id/my_enddate"
            app:layout_constraintStart_toEndOf="@+id/my_startdate"
            app:layout_constraintTop_toBottomOf="@+id/view8" />

        <!--신청중-->
        <ImageView
            android:id="@+id/my_ic_ing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/mymy_ic_ing"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/farmer_profile_phone"
            app:layout_constraintTop_toTopOf="@+id/farmer_profile_phone" />

        <!--신청완료,신청취소-->
        <ImageView
            android:id="@+id/mymy_cancle_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/mymy_cancle_complete_selector"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/farmer_profile_phone"
            app:layout_constraintTop_toTopOf="@+id/my_nonghwalname" />

        <!--농활확정-->
        <ImageView
            android:id="@+id/my_extention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/mymy_extention"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/farmer_profile_phone"
            app:layout_constraintTop_toTopOf="@+id/my_nonghwalname" />

        <!--입금완료 입금대기-->
        <ImageView
            android:id="@+id/my_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mymy_deposit_selector"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/my_ic_ing"
            app:layout_constraintTop_toTopOf="@+id/my_ic_ing" />

        <TextView
            android:id="@+id/farmer_profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="1박2일"
            android:textColor="#DE000000"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/my_nonghwalname"
            app:layout_constraintTop_toTopOf="@+id/my_nonghwalname" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline63"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/my_review_write">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="후기작성"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:textColor="#3470FF"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>




    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/my_review_modify">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="후기 수정"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:textColor="#3470FF"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>





    <android.support.constraint.ConstraintLayout
        android:id="@+id/my_ing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <ProgressBar
            android:id="@+id/progressBar_blue"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:max="20"
            android:progress="17"
            android:progressTint="#3470FF"
            app:layout_constraintEnd_toStartOf="@+id/guideline66"
            app:layout_constraintStart_toStartOf="@+id/guideline_65"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="참여인원 "
            android:textColor="#DE000000"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline_65"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_blue" />

        <TextView
            android:id="@+id/textView85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text=" 남았습니다!  "
            android:textColor="#DE000000"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/profile_address"
            app:layout_constraintTop_toTopOf="@+id/my_people" />

        <TextView
            android:id="@+id/my_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="3"
            android:textColor="#F25620"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/textView88"
            app:layout_constraintTop_toTopOf="@+id/textView88" />

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="명"
            android:textColor="#F25620"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/my_people"
            app:layout_constraintTop_toTopOf="@+id/my_people" />


        <TextView
            android:id="@+id/my_peoplecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="17"
            android:textColor="#8A000000"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/farmer_profile_comment"
            app:layout_constraintTop_toTopOf="@+id/farmer_profile_comment" />

        <TextView
            android:id="@+id/farmer_profile_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="/"
            android:textColor="#8A000000"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/my_people_limit"
            app:layout_constraintTop_toTopOf="@+id/my_people_limit" />

        <TextView
            android:id="@+id/my_people_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:text="20"
            android:textColor="#8A000000"
            android:textSize="11sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline66"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_blue" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/my_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar_gray"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:max="20"
            android:progress="17"
            android:progressTint="#707070"
            app:layout_constraintEnd_toStartOf="@+id/guideline67"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline65"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.055555556" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9527778" />

        <TextView
            android:id="@+id/farmer_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="4dp"
            android:text="인원이 3명 모자랐어요…. 너무 아쉬워요 다음엔 꼭 함께해요!"
            android:textSize="11sp"
            android:fontFamily="@font/nanumsquareround_otfb"
            android:textColor="#DE000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline65"
            app:layout_constraintTop_toBottomOf="@+id/progressBar_gray" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#F3F3F5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>